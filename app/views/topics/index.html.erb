<%= button_to "ニュースを更新する", fetch_and_save_topics_path, method: :post %>

<div id="map"></div>

<script>

document.addEventListener("turbo:load",function(){

const map = L.map('map').setView([35.0,135.0],5);

 L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
  maxZoom: 19,
  attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
  }).addTo(map);

 <% @topics.each do |topic| %>
   <% if topic.latitude.present? && topic.longitude.present? %>
     L.marker([
      <%= topic.latitude.to_f %>, 
      <%= topic.longitude.to_f %>]).addTo(map).bindPopup("<%= j topic.title%><br><a href='<%= j topic.url %>' target='_blank'><%= j topic.url %></a>");
   <% end %>
 <% end %>
  });

</script>